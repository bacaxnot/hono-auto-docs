{
  "openapi": "3.0.0",
  "info": {
    "title": "Basic App API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "tags": [
    {
      "name": "Users"
    }
  ],
  "paths": {
    "/user": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "default": {
            "description": "Default fallback response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              }
            }
          }
        },
        "description": "Returns a list of all users in the system",
        "tags": [
          "Users"
        ]
      }
    },
    "/user/u/{id}": {
      "get": {
        "summary": "Get user details",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "Default fallback response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id"
                  ]
                }
              }
            }
          }
        },
        "description": "Returns detailed information about a specific user",
        "tags": [
          "Users"
        ]
      }
    }
  }
}
